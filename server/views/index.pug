html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title= title

        link(rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

    body
        main#bcshopVue(role="main" class="container")
            h1#pageTitle BC Online Shop
            form#addProductForm(action="/" method="POST")
                .form-group
                    label Name
                    input.form-control#product_name(type="text" name="product_name" v-model="product_name")
                .form-group
                    label Description
                    input.form-control#product_description(type="text" name="product_description" v-model="product_description")
                .form-group
                    label Price
                    input.form-control#product_price(type="number" min="1" name="product_price" v-model="product_price")
                .form-group
                    label Quantity
                    input.form-control#product_quantity(type="number" min="0" name="product_quantity" v-model="product_quantity")
                .form-group
                    label Category
                    input.form-control#product_category(type="text" name="product_category" v-model="product_category")
                .form-group
                    button.btn.btn-primary(type="button" v-on:click="addProduct") Add Product
                    button.btn#clearBtn(type="button" v-on:click="clear") Clear
            
            section
                table.table#productsTable
                    tr
                        th ID
                        th Name
                        th Description
                        th Price
                        th Quantity
                        th Category
                        th Actions
                    tr(v-for="product in products")
                        td {{ product.product_id }}
                        td {{ product.product_name }}
                        td {{ product.product_description }}
                        td {{ product.product_price }}
                        td {{ product.product_quantity }}
                        td {{ product.product_category }}
                        td
                            button(v-on:click="viewProduct(product)") Edit
                            button(v-on:click="deleteProduct(product)") Delete
        
        script(src="https://unpkg.com/axios/dist/axios.min.js")
        script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
        script(src="/bcshop-vue.js")
        